@model SOPopularTags.Application.ViewModels.HomeVM
@{
    ViewData["Title"] = "Most popular Stack Overflow tags";
}
<div class="row">
    <div class="col text-center">
        <h1>@ViewData["Title"]</h1>
    </div>
</div>
<div class="row">
    <div class="col text-center">
        <table class="table table-bordered table-striped text-center">
            <thead class="thead-dark">
                <tr>
                    <th>Number</th>
                    <th>Tag name</th>
                    <th>Number of uses</th>
                    <th>Popularity %</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Items.Count; i++)
                {
                    <tr>
                        <td class="align-middle">
                            @(i + 1)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => Model.Items[i].Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => Model.Items[i].Count)
                        </td>
                        <td class="align-middle">
                            @Model.Items[i].PopularityPercent.ToString("n2") %
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>